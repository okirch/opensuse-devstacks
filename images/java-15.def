IMAGE_COMPATIBLE(tumbleweed)
IMAGE_TITLE([Java 15 development container])
IMAGE_DESCRIPTION([Environment for Java 15 development])
IMAGE_TAG(java-devel)
IMAGE_VERSION(15)

BUILD_INSTRUCTIONS([
# Work around https://github.com/openSUSE/obs-build/issues/487
RUN zypper install -y openSUSE-release-appliance-docker

# Development packages
RUN zypper install -y --no-recommends java-15-openjdk-devel maven git-core
])

