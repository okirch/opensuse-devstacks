IMAGE_COMPATIBLE(tumbleweed, leap-15.2)
IMAGE_TITLE([Java 16 development container])
IMAGE_DESCRIPTION([Environment for Java 16 development])
IMAGE_TAG(java-devel)
IMAGE_VERSION(16)

BUILD_INSTRUCTIONS([
# Work around https://github.com/openSUSE/obs-build/issues/487
RUN zypper install -y openSUSE-release-appliance-docker

# Development packages
RUN zypper install -y --no-recommends java-16-openjdk-devel maven git-core
])
